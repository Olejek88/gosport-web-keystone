extends ../../layouts/default

block intro

block flash-messages

block content
	.container-sm
		.page-intro
			p.lead Добавьте данные о площадке
		.page-content.tile.ph-0.pv-2.mb-2
			.panel-heading
				span.entypo.entypo-add-user
				|  Новая площадка
			br
			+flash-messages(messages)
			form(method='post', enctype='multipart/form-data', autocomplete='off', novalidate).form-horizontal
				input(type='hidden', name='action', value='stadium.add')
				.form-group.ph-1
					label.col-sm-2.control-label Название
					input(type='text', id='name', name='name', placeholder='Название площадки/стадиона').input.input-md.form-control
				.form-group.ph-1
					label.col-sm-2.control-label Адрес
					input(type='text', id='address', name='address', placeholder='Адрес').input.input-md.form-control
				.form-group.ph-1
					label.col-sm-2.control-label Описание
					textarea(name='description', class='wysiwyg', rows='6', cols='80').input.input-faded
				.form-group.ph-1
					label.col-sm-2.control-label Вид спорта
					select(name='sport').form-control
						option(value='') (выберите)
						each sport in sports
							option(value=sport.id)= sport.name
				.form-group.ph-1
					label.col-sm-2.control-label Фотография
					input(type='file', id='photo', name='photo', placeholder='Фото').input.input-md.form-control
				.form-group.ph-1
					label.col-sm-2.control-label Широта
					input(type='text', id='latitude', name='latitude', placeholder='Широта').input.input-md.form-control
				.form-group.ph-1
					label.col-sm-2.control-label Долгота
					input(type='text', id='longitude', name='longitude', placeholder='Долгота').input.input-md.form-control
				.form-group.ph-2
					button(type='submit', data-loading-text="Сохраняем...").btn.btn-primary.ph-1 Добавить площадку
